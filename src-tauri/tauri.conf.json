{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Ohmframe Drawer",
  "version": "1.1.2",
  "identifier": "com.ohmframe.drawer",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Ohmframe Drawer - 2D Drawing Generator",
        "width": 1400,
        "height": 900,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false,
        "minWidth": 1000,
        "minHeight": 700
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": {
      "../public/occt-import-js.wasm": "occt-import-js.wasm"
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "Ohmframe",
    "category": "Productivity",
    "shortDescription": "AI-powered 2D engineering drawing generator",
    "longDescription": "Ohmframe Drawer automatically generates 2D engineering drawings with orthographic views and ASME-standard dimensioning from STEP files."
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
